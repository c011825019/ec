<div class="container">
  <div class="row">
    <div class="col">
      <h5 class="col-3 my-3 bg-light text-center">
        商品詳細
      </h5>

      <table class="table table-borderless">
        <tbody>
          <tr>
            <td class="col-3">商品名</td>
            <td><%= @item.name %></td>
          </tr>
          <tr>
            <td class="col-3">商品説明</td>
            <td><%= @item.introduction %></td>
          </tr>
          <tr>
            <td class="col-3">税込価格<br>(税抜価格)</td>
            <td><%= @item.price * 1.1 %> (<%= @item.price %>)</td>
          </tr>
            <td class="col-3">販売ステータス</td>
            <td>
              <% if @item.is_active %>
                <span class="text-success">販売中</span>
              <% else %>
                <span class="text-secondary">販売停止中</span>
              <% end %>
            </td>
          </tr>
          <tr>
            <td class="col-2"></td>
            <td>
              <%= link_to '編集する', admins_customers_path, class: "btn btn-sm btn-success" %>
            </td>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
</div>