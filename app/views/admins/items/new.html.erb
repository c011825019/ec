<div class="container">
  <div class="row">
    <div class="col">
      <p>商品新規登録</p>
      <%= form_with model: [:admins, @item], local: true do |f| %>
        <table class="table table-borderless">
          <tbody>
            <tr>
              <td class="col-3">商品名</td>
              <td><%= f.text_field :name %></td>
            </tr>
            <tr>
              <td class="col-3">商品説明</td>
              <td><%= f.text_area :introduction %></td>
            </tr>
            <tr>
              <td class="col-3">ジャンル</td>
              <td colspan="2"><%= f.text_field :genre_id %></td>
            </tr>
            <tr>
              <td class="col-3">税抜価格</td>
              <td colspan="2"><%= f.text_field :price %>円</td>
            </tr>
            <tr>
              <td class="col-3">会員ステータス</td>
              <td>
                <%= f.radio_button :is_active, :true %>販売中
                <%= f.radio_button :is_active, :false %>販売停止中
              </td>
            </tr>
            <tr>
              <td class="col-2"></td>
              <td><%= f.submit '変更を保存', class: "btn btn-sm btn-success" %></td>
            </tr>
          </tbody>
        </table>
      <% end %>
    </div>
  </div>
</div>