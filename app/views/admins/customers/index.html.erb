<p id="notice"><%= notice %></p>

<p>会員一覧</p>
<table class="table">
  <thead>
    <tr>
      <th>会員ID</th>
      <th>氏名</th>
      <th>メールアドレス</th>
      <th>ステータス</th>
    </tr>
  </thead>
  <tbody>
    <% @customers.each do |customer| %>
      <tr>
        <td><%= customer.id %></td>
        <td>
          <%= link_to(admins_customer_path(customer)) do %>
            <%= customer.last_name + customer.first_name %>
          <% end %>
        </td>
        <td><%= customer.email %></td>
        <td>
          <% if customer.is_deleted%>
            <span class="text-secondary">退会<%= customer.is_deleted %></span>
          <% else %>
            <span class="text-success">有効<%= customer.is_deleted %></span>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
