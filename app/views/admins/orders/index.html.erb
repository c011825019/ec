<div class="container">
  <div class="row">
    <div class="col">
      <h5 class="col-3 my-3 bg-light text-center">会員一覧</h5>

      <table class="table">
        <thead class="thead-light">
          <tr>
            <th>購入日時</th>
            <th>購入者</th>
            <th>注文個数</th>
            <th>注文ステータス</th>
          </tr>
        </thead>
        <tbody>
          <% @orders.each do |order| %>
            <tr>
              <td>
                <%= link_to(admins_order_path(order)) do %>
                  <%= order.created_at %>
                <% end %>
              </td>
              <td><%= order.customer_id %></td>
              <td>1</td>
              <td>
                <%= form_with model: order, url: admins_order_path(order) do |f| %>
                  <%= f.select :status, [["入金待ち", 0], ["入金確認", 1], ["制作中", 2], ["発送準備中", 3], ["発送済み", 4]] %>
                  <%= f.submit '更新', class: "btn btn-sm btn-success" %>
                <% end %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
