<div class="container">
  <div class="row">
    <div class="col">
      <h5 class="col-4 my-3 offset-1 bg-light text-center">会員情報編集</h5>

      <%= form_with model: @customer, url: customers_information_path do |f| %>
        <table class="table table-borderless">
          <tbody>
            <tr>
              <td class="col-3">氏名</td>
              <td><%= f.text_field :last_name %></td>
              <td><%= f.text_field :first_name %></td>
            </tr>
            <tr>
              <td class="col-3">フリガナ</td>
              <td><%= f.text_field :last_name_kana %>
              </td>
              <td>
                <%= f.text_field :first_name_kana %>
              </td>
            </tr>
            <tr>
              <td class="col-3">郵便番号</td>
              <td><%= f.text_field :postal_code %></td>
            </tr>
            <tr>
              <td class="col-3">住所</td>
              <td colspan="2"><%= f.text_field :address, size: 60 %></td>
            </tr>
            <tr>
              <td class="col-3">電話番号</td>
              <td><%= f.text_field :telephone_number %></td>
            </tr>
            <tr>
              <td class="col-3">メールアドレス</td>
              <td><%= f.text_field :email %></td>
            </tr>
            <tr>
              <td class="col-3"></td>
              <td><%= f.submit '変更を保存', class: "btn btn-sm btn-success" %></td>
              <td><%= link_to '退会する', customers_unsubscribe_path, class: "btn btn-sm btn-danger" %></td>
            </tr>
          </tbody>
        </table>
      <% end %>
    </div>
  </div>
</div>