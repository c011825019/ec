<div class="container">
  <div class="row">
    <div class="col">
      <h5 class="col-2 mt-3 bg-light text-center">新規会員登録</h5>

      <%= form_with model: @customer, url: customer_registration_path do |f| %>
        <%= render "customers/shared/error_messages", resource: resource %>
        <table class="table table-borderless">
          <tbody>
            <tr>
              <td>名前</td>
              <td>(姓)<%= f.text_field :last_name, autocomplete: "first_name" %></td>
              <td>(名)<%= f.text_field :first_name, autocomplete: "first_name" %></td>
            </tr>
            <tr>
              <td>フリガナ</td>
              <td>(セイ)<%= f.text_field :last_name_kana, autocomplete: "last_name_kana" %></td>
              <td>(メイ)<%= f.text_field :first_name_kana, autocomplete: "first_name_kana" %></td>
            </tr>
            <tr>
              <td>メールアドレス</td>
              <td><%= f.email_field :email, autofocus: true, autocomplete: "email" %></td>
            </tr>
            <tr>
              <td>郵便番号(ハイフンなし)</td>
              <td><%= f.text_field :postal_code, autocomplete: "postal_code" %></td>
            </tr>
            <tr>
              <td>住所</td>
              <td><%= f.text_field :address, autocomplete: "address" %></td>
            </tr>
            <tr>
              <td>電話番号(ハイフンなし)</td>
              <td><%= f.text_field :telephone_number, autocomplete: "telephone_number" %></td>
            </tr>
            <tr>
              <td>
                パスワード
                <% if @minimum_password_length %>
                  <em>(<%= @minimum_password_length %> characters minimum)</em>
                <% end %></td>
              <td>
                <%= f.password_field :password, autocomplete: "new-password" %>
              </td>
            </tr>
            <tr>
              <td>パスワード(確認用)</td>
              <td><%= f.password_field :password_confirmation, autocomplete: "new-password" %></td>
            </tr>
            <tr>
              <td></td>
              <td><%= f.submit "Sign up", class: "btn btn-sm btn-success" %></td>
            </tr>
          </tbody>
        </table>
      <% end %>
    </div>
  </div>
</div>